<div class="container mt-4">
  <h1 class="mb-4 text-center" style="color: #28a745; font-weight: bold;">Crear Pregunta de Opción Múltiple</h1>

  <%= form_with(model: @multi_choice_question, local: true, html: { class: 'form' }) do |form| %>
    
    <div class="form-group">
      <%= form.label :question, class: 'form-label text-secondary' %>
      <%= form.text_field :question, class: 'form-control mb-3', placeholder: 'Escribe la pregunta aquí' %>
    </div>

    <div class="form-group">
      <%= form.label :choice_1_value, class: 'form-label text-secondary' %>
      <%= form.text_field :choice_1_value, class: 'form-control mb-3', placeholder: 'Escribe la alternativa 1' %>
      <%= form.label :choice_1_why_not, class: 'form-label text-secondary' %>
      <%= form.text_area :choice_1_why_not, class: 'form-control mb-3', placeholder: '¿Por qué no es la respuesta correcta?' %>
    </div>

    <div class="form-group">
      <%= form.label :choice_2_value, class: 'form-label text-secondary' %>
      <%= form.text_field :choice_2_value, class: 'form-control mb-3', placeholder: 'Escribe la alternativa 2' %>
      <%= form.label :choice_2_why_not, class: 'form-label text-secondary' %>
      <%= form.text_area :choice_2_why_not, class: 'form-control mb-3', placeholder: '¿Por qué no es la respuesta correcta?' %>
    </div>

    <div class="form-group">
      <%= form.label :choice_3_value, class: 'form-label text-secondary' %>
      <%= form.text_field :choice_3_value, class: 'form-control mb-3', placeholder: 'Escribe la alternativa 3' %>
      <%= form.label :choice_3_why_not, class: 'form-label text-secondary' %>
      <%= form.text_area :choice_3_why_not, class: 'form-control mb-3', placeholder: '¿Por qué no es la respuesta correcta?' %>
    </div>

    <div class="form-group">
      <%= form.label :choice_4_value, class: 'form-label text-secondary' %>
      <%= form.text_field :choice_4_value, class: 'form-control mb-3', placeholder: 'Escribe la alternativa 4' %>
      <%= form.label :choice_4_why_not, class: 'form-label text-secondary' %>
      <%= form.text_area :choice_4_why_not, class: 'form-control mb-3', placeholder: '¿Por qué no es la respuesta correcta?' %>
    </div>

    <div class="form-group">
      <%= form.label :correct_answer, class: 'form-label text-secondary' %>
      <%= form.text_field :correct_answer, class: 'form-control mb-3', placeholder: 'Escribe la respuesta correcta aquí' %>
    </div>

    <div class="form-group">
      <%= form.label :task_id, class: 'form-label text-secondary' %>
      <%= form.collection_select :task_id, Task.where(task_type: 'multi_choice'), :id, :name_with_course, { include_blank: 'Selecciona una tarea' }, { class: 'form-control mb-3' } %>
    </div>

    <div class="form-group">
      <%= form.label :difficulty, class: 'form-label text-secondary' %>
      <%= form.select :difficulty, options_for_select([['Baja', 0], ['Media', 1], ['Alta', 2]]), { include_blank: 'Selecciona dificultad' }, class: 'form-control mb-3' %>
    </div>

    <div class="form-group text-center">
      <%= form.submit 'Crear Pregunta', class: 'btn mt-3', style: 'background-color: #28a745; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);' %>
      <%= link_to 'Cancelar', multi_choice_questions_path, class: 'btn mt-3', style: 'background-color: #6c757d; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); margin-left: 10px;' %>
    </div>
  <% end %>
</div>
