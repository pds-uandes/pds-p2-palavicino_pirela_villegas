<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Question Details</h5>
    </div>
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted">Question</h6>
      <p class="card-text"><%= @multi_choice_question.question %></p>

      <h6 class="card-subtitle mb-2 text-muted">Choices</h6>
      <%= form_with url: submit_answer_multi_choice_question_path(@multi_choice_question), local: true do |form| %>
        <ul class="list-group mb-3">
          <li class="list-group-item">
            <%= form.radio_button :selected_answer, @multi_choice_question.choice_1 %>
            <%= @multi_choice_question.choice_1 %>
          </li>
          <li class="list-group-item">
            <%= form.radio_button :selected_answer, @multi_choice_question.choice_2 %>
            <%= @multi_choice_question.choice_2 %>
          </li>
          <li class="list-group-item">
            <%= form.radio_button :selected_answer, @multi_choice_question.choice_3 %>
            <%= @multi_choice_question.choice_3 %>
          </li>
          <li class="list-group-item">
            <%= form.radio_button :selected_answer, @multi_choice_question.choice_4 %>
            <%= @multi_choice_question.choice_4 %>
          </li>
        </ul>
      <% end %>

      <%= link_to 'Back', multi_choice_questions_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
