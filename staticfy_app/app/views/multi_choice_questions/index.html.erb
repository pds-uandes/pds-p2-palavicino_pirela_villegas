<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header text-center" style="background-color: #28a745; color: white;">
      <h2 class="mb-0">Preguntas de Opción Múltiple</h2>
    </div>
    <div class="card-body">
      <div class="mb-3 text-center">
        <%= link_to 'Nueva Pregunta', new_multi_choice_question_path, class: 'btn', style: "background-color: #28a745; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
      </div>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Pregunta</th>
            <th>Curso</th>
            <th>Opción 1</th>
            <th>Opción 2</th>
            <th>Opción 3</th>
            <th>Opción 4</th>
            <th>Respuesta Correcta</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @multi_choice_questions.each do |question| %>
            <tr>
              <td><%= question.id %></td>
              <td><%= question.question %></td>
              <td><%= question.task.course.name %></td>
              <td><%= question.choice_1 %></td>
              <td><%= question.choice_2 %></td>
              <td><%= question.choice_3 %></td>
              <td><%= question.choice_4 %></td>
              <td><%= question.correct_answer %></td>
              <td>
                <%= link_to 'Mostrar', multi_choice_question_path(question), class: 'btn mb-2', style: "background-color: #17a2b8; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
                <%= link_to 'Editar', edit_multi_choice_question_path(question), class: 'btn mb-2', style: "background-color: #ffc107; color: black; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
                <%= button_to 'Eliminar', multi_choice_question_path(question), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn', style: "background-color: #dc3545; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
