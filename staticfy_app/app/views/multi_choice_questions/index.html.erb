<div class="container mt-4">
<h1 class="mb-4">Multi Choice Questions</h1>

<div class="mb-3">
    <%= link_to 'New Question', new_multi_choice_question_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>Question</th>
        <th>Choice 1</th>
        <th>Choice 2</th>
        <th>Choice 3</th>
        <th>Choice 4</th>
        <th>Correct Answer</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @multi_choice_questions.each do |question| %>
        <tr>
        <td><%= question.id %></td>
        <td><%= question.question %></td>
        <td><%= question.choice_1 %></td>
        <td><%= question.choice_2 %></td>
        <td><%= question.choice_3 %></td>
        <td><%= question.choice_4 %></td>
        <td><%= question.correct_answer %></td>
        <td>
            <%= link_to 'Show', multi_choice_question_path(question), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_multi_choice_question_path(question), class: 'btn btn-warning btn-sm' %>
            <%= button_to 'Destroy', multi_choice_question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>
