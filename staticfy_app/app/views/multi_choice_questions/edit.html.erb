<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header text-center" style="background-color: #28a745; color: white;">
      <h2 class="mb-0">Editar Pregunta de Opción Múltiple</h2>
    </div>
    <div class="card-body">
      <div class="text-center mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" width='50' height='50' viewBox="0 0 24 24" fill="none"><path d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" stroke="#28a745" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path><path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="#28a745" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>      </div>

      <%= form_with(model: @multi_choice_question, local: true, html: { class: 'form' }) do |form| %>
        
        <div class="form-group">
          <%= form.label :question, class: 'form-label text-secondary' %>
          <%= form.text_field :question, class: 'form-control mb-3', placeholder: 'Edita la pregunta aquí' %>
        </div>

        <div class="form-group">
          <%= form.label :choice_1, class: 'form-label text-secondary' %>
          <%= form.text_field :choice_1, class: 'form-control mb-3', placeholder: 'Edita la alternativa 1' %>
        </div>

        <div class="form-group">
          <%= form.label :choice_2, class: 'form-label text-secondary' %>
          <%= form.text_field :choice_2, class: 'form-control mb-3', placeholder: 'Edita la alternativa 2' %>
        </div>

        <div class="form-group">
          <%= form.label :choice_3, class: 'form-label text-secondary' %>
          <%= form.text_field :choice_3, class: 'form-control mb-3', placeholder: 'Edita la alternativa 3' %>
        </div>

        <div class="form-group">
          <%= form.label :choice_4, class: 'form-label text-secondary' %>
          <%= form.text_field :choice_4, class: 'form-control mb-3', placeholder: 'Edita la alternativa 4' %>
        </div>

        <div class="form-group">
          <%= form.label :correct_answer, class: 'form-label text-secondary' %>
          <%= form.text_field :correct_answer, class: 'form-control mb-3', placeholder: 'Edita la respuesta correcta aquí' %>
        </div>

        <div class="form-group">
          <%= form.label :task_id, class: 'form-label text-secondary' %>
          <%= form.collection_select :task_id, Task.where(task_type: 'multi_choice'), :id, :name_with_course, { include_blank: 'Selecciona una tarea' }, { class: 'form-control mb-3' } %>
        </div>

        <div class="form-group">
          <%= form.label :difficulty, class: 'form-label text-secondary' %>
          <%= form.select :difficulty, options_for_select([['Baja', 0], ['Media', 1], ['Alta', 2]], @multi_choice_question.difficulty), { include_blank: 'Selecciona dificultad' }, class: 'form-control mb-3' %>
        </div>

        <div class="form-group text-center">
          <%= form.submit 'Actualizar Pregunta', class: 'btn mt-3', style: 'background-color: #28a745; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);' %>
          <%= link_to 'Cancelar', multi_choice_questions_path, class: 'btn mt-3', style: 'background-color: #6c757d; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); margin-left: 10px;' %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
