<div class="container mt-4" style="max-width: 800px; margin: auto;">
  <div class="card" style="border: none; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);">
    <div class="card-body" style="padding: 2rem;">
      <% if @task.task_type == 'multi_choice' && !@task.is_finished %>
        <div id="question-container">
          <% @multi_choice_questions.each_with_index do |question, index| %>
            <div class="question-item <%='d-none' unless index == 0 %>" data-index="<%= index %>" data-id="<%= question.id %>" data-correct-answer="<%= question.correct_answer %>" style="padding: 1rem; background-color: #f4f6f6; border-radius: 8px; margin-bottom: 1rem;">
              <div class="question-header" style="margin-bottom: 1rem; text-align: center;">
                <h6 style="font-weight: bold; color: #004d00;">
                  Pregunta <%= index + 1 %> de <%= @multi_choice_questions.length %>
                </h6>
              </div>
              <h5 class="mb-3" style="font-weight: 700;"><%= question.question %></h5>
              
              <% (1..4).each do |choice_number| %>
                <div class="form-check" style="margin-bottom: 0.75rem;">
                  <input class="form-check-input" type="radio" name="choice_<%= index %>" id="choice<%= choice_number %>_<%= index %>" value="<%= @questions_with_choices[question.id][:"choice#{choice_number}"]['value'] %>">
                  <label class="form-check-label" for="choice<%= choice_number %>_<%= index %>" style="font-size: 1rem;">
                    <%= @questions_with_choices[question.id][:"choice#{choice_number}"]['value'] %>
                  </label>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div style="text-align: center; margin-top: 2rem;">
          <button id="next-btn" class="btn btn-primary">Siguiente</button>
          <button id="skip-btn" class="btn btn-danger">Saltar</button>
        </div>
      <% elsif @task.is_finished %>
        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title">Resultados de la Tarea</h5>
            <% total_questions = @multi_choice_questions.count %>
            <% incorrect_answers = @task.wrong_counter %>
            <% correct_answers = total_questions - incorrect_answers %>
            <% success_rate = (correct_answers.to_f / total_questions * 100).round(2) %>

            <p class="card-text">
              <strong>Correctas:</strong> <%= correct_answers %><br>
              <strong>Incorrectas:</strong> <%= incorrect_answers %><br>
              <strong>Porcentaje de acierto:</strong> <%= success_rate %>%
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function showCustomAlert(message) {
    const alertContainer = document.createElement('div');
    alertContainer.classList.add('alert-js'); 
    alertContainer.textContent = message;

    document.body.appendChild(alertContainer);

    setTimeout(() => {
        alertContainer.remove();
    }, 6000); 
}

document.addEventListener('turbo:load', () => {
  const questions = document.querySelectorAll('.question-item');
  const nextBtn = document.getElementById('next-btn');
  const skipBtn = document.getElementById('skip-btn');
  let currentIndex = 0;
  let correctAnswers = 0;
  let wrongAnswers = 0;
  let taskFinished = false;

  function showQuestion(index) {
    questions.forEach((q, i) => {
      q.classList.toggle('d-none', i !== index);
    });
  }

  nextBtn.addEventListener('click', () => {
    if (taskFinished) return;

    const selectedOption = document.querySelector(`input[name="choice_${currentIndex}"]:checked`);

    if (!selectedOption) {
      showCustomAlert('Por favor, selecciona una respuesta.');
      return;
    }

    const questionElement = questions[currentIndex];
    const selectedChoice = selectedOption.value;
    const correctAnswer = questionElement.dataset.correctAnswer;
    const questionId = questionElement.dataset.id;

    let isCorrect = selectedChoice === correctAnswer;
    const correctAnswersCount = isCorrect ? correctAnswers++ : wrongAnswers++;
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;

    // Envío de la respuesta
    fetch(`/multi_choice_answers`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken
      },
      body: JSON.stringify({
        multi_choice_answer: {
          user_id: <%= current_user.id %>,
          multi_choice_question_id: questionId,
          selected_choice: selectedChoice,
          is_correct: isCorrect
        }
      })
    });

    if (isCorrect) {
      showCustomAlert("Respuesta correcta! ✅");
    } else {
      const choiceNumber = Array.from(questionElement.querySelectorAll('input[type="radio"]')).findIndex(input => input === selectedOption) + 1;
      const whyNotMessage = <%= @questions_with_choices.to_json.html_safe %>[questionId][`choice${choiceNumber}`].why_not;
      showCustomAlert(`${whyNotMessage || "No hay explicación disponible."}`);
    }

    currentIndex++;

    if (currentIndex < questions.length) {
      showQuestion(currentIndex);
      nextBtn.textContent = 'Siguiente';
    } else {
      taskFinished = true;
      // Envío para finalizar la tarea
      fetch(`/tasks/${<%= @task.id %>}/finish`, { 
        method: 'POST', 
        body: JSON.stringify({ correctAnswers, wrongAnswers }),
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken
        }
      }).then(() => {
        nextBtn.style.display = 'none';
        skipBtn.style.display = 'none';

        const resultCard = document.createElement('div');
        resultCard.className = 'card mt-4';
        resultCard.innerHTML = `
          <div class="card-body">
            <h5 class="card-title">Resultados de la Tarea</h5>
            <p class="card-text">
              <strong>Correctas:</strong> ${correctAnswers}<br>
              <strong>Incorrectas:</strong> ${wrongAnswers}<br>
              <strong>Porcentaje de acierto:</strong> ${(correctAnswers / questions.length * 100).toFixed(2)}%
            </p>


            <div class="text-center align-items-center align-content-center mt-4">
              <%= button_to courses_path, method: :get, class: 'btn btn-outline-success d-flex align-items-center justify-content-center' do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16" style="margin-right: 8px;">
                  <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zM8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0z"/>
                  <path fill-rule="evenodd" d="M8.354 11.354a.5.5 0 0 1-.708 0L4.646 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 8l2.647 2.646a.5.5 0 0 1 0 .708z"/>
                  <path fill-rule="evenodd" d="M11.5 8a.5.5 0 0 1-.5.5H5.5a.5.5 0 0 1 0-1h5.5a.5.5 0 0 1 .5.5z"/>
                </svg>
                Volver al índice de cursos
              <% end %>
            </div>
          </div>
        `;
        document.querySelector('.card-body').appendChild(resultCard);
      });
    }
  });

  skipBtn.addEventListener('click', () => {
    currentIndex++;

    if (currentIndex < questions.length) {
      showQuestion(currentIndex);
    }
  });
});
</script>
