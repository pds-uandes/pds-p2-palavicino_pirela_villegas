<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header text-center" style="background-color: #28a745; color: white;">
      <h2 class="mb-0">Crear Nueva Tarea</h2>
    </div>
    <div class="card-body">
      <div class="text-center mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24" fill="none"><path d="M4 12H20M12 4V20" stroke="#28a745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></svg>      </div>

      <%= form_with(model: @task, local: true, html: { class: 'form' }) do |form| %>
        
        <div class="form-group">
          <%= form.label :name, class: 'form-label text-secondary' %>
          <%= form.text_field :name, class: 'form-control mb-3', placeholder: 'Escribe el nombre de la tarea' %>
        </div>

        <div class="form-group">
          <%= form.label :task_type, class: 'form-label text-secondary' %>
          <%= form.select :task_type, [['OpciÃ³n MÃºltiple', 'multi_choice']], { include_blank: 'Selecciona el tipo de tarea' }, class: 'form-control mb-3' %>
        </div>

        <div class="form-group">
          <%= form.label :course_id, class: 'form-label text-secondary' %>
          <%= form.collection_select :course_id, Course.all, :id, :name, { include_blank: 'Selecciona un curso' }, { class: 'form-control mb-3' } %>
        </div>

        <div class="form-group">
          <%= form.label :status, class: 'form-label text-secondary' %>
          <%= form.select :status, [['En Progreso', 'in_progress']], { include_blank: 'Selecciona el estado de la tarea' }, class: 'form-control mb-3' %>
        </div>

        <div class="form-group text-center">
          <%= form.submit 'Crear Tarea', class: 'btn mt-3', style: 'background-color: #28a745; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);' %>
          <%= link_to 'Cancelar', tasks_path, class: 'btn mt-3', style: 'background-color: #6c757d; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); margin-left: 10px;' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
