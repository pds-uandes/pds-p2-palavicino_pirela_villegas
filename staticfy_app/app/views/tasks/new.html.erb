<div class="container mt-4">
  <h1 class="mb-4">New Task</h1>

  <%= form_with(model: @task, local: true, html: { class: 'form' }) do |form| %>
    <div class="form-group">
      <%= form.label :user_id, class: 'form-label' %>
      <%= form.collection_select :user_id, User.all, :id, :name, { include_blank: 'Select a user' }, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.label :task_type, class: 'form-label' %>
      <%= form.select :task_type, [['Multi Choice', 'multi_choice'], ['Numeric', 'numeric']], { include_blank: 'Select task type' }, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.label :status, class: 'form-label' %>
      <%= form.select :status, [['Finished', 'finished'], ['Not Finished', 'not_finished']], { include_blank: 'Select status' }, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.submit 'Create Task', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', tasks_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
