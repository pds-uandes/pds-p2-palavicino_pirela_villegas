<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header text-center" style="background-color: #28a745; color: white;">
      <h2 class="mb-0">Tareas</h2>
    </div>
    <div class="card-body">
      <div class="mb-3 text-center">
        <%= link_to 'Nueva Tarea', new_task_path, class: 'btn', style: "background-color: #28a745; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
      </div>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tipo de Tarea</th>
            <th>Curso</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.id %></td>
              <td><%= task.name %></td>
              <td><%= task.task_type %></td>
              <td><%= task.course.present? ? task.course.name : 'Sin Curso' %></td>
              <td><%= task.status %></td>
              <td>
                <%= link_to 'Mostrar', task_path(task), class: 'btn mb-2', style: "background-color: #17a2b8; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
                <%= link_to 'Editar', edit_task_path(task), class: 'btn mb-2', style: "background-color: #ffc107; color: black; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
                <%= button_to 'Eliminar', task_path(task), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn', style: "background-color: #dc3545; color: white; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
