<div class="container mt-4">
  <h1 class="mb-4">Tasks</h1>
  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary mb-3' %>

  <% if @tasks.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Type</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.task_type %></td>
            <td><%= task.status %></td>
            <td>
              <%= link_to 'Show', task, class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm ml-2' %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">No tasks available.</div>
  <% end %>
</div>
