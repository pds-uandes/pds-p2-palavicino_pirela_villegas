<svg id="diagram-svg" width="300" height="300"></svg>

<script type="module">
  import * as Diagramatics from 'https://cdn.jsdelivr.net/npm/diagramatics@1.5/dist/diagramatics.min.js';

  document.addEventListener('DOMContentLoaded', function() {
    const mysvg = document.getElementById('diagram-svg');

    const forceMagnitude = <%= @force_magnitude_8 %>;
    const length = 6; 
    const length_2 = 3;  
    const force_x = <%= @longitud_8 %>;

    function updateDiagram() {
      mysvg.innerHTML = '';  
      let draw = (...diagrams) => {
        Diagramatics.draw_to_svg(mysvg, Diagramatics.diagram_combine(...diagrams));
      };

      const basePosition = Diagramatics.V2(0, 0.5); 
      const r1 = Diagramatics.rectangle(length, 0.3)
        .move_origin('bottom-left')
        .position(basePosition)
        .fill('blue');

      const r2 = Diagramatics.rectangle(length_2, 0.3)
        .move_origin('bottom-left')
        .position(Diagramatics.V2(length, 0.5))
        .fill('blue');

      const wall = Diagramatics.rectangle(1, 3)
        .move_origin('bottom-right')
        .position(Diagramatics.V2(0, -0.8))
        .fill('gray').stroke('none');

      let horizontal = Diagramatics.line(Diagramatics.V2(0, 0), Diagramatics.V2(10, 0))
        .stroke('black').strokedasharray([5, 5]).strokewidth(2);

      const triangle_base = Diagramatics.polygon([
        Diagramatics.V2(-0.25, 0),    
        Diagramatics.V2(0.25, 0),     
        Diagramatics.V2(0, (Math.sqrt(3)/2) * 0.5)
      ])
        .position(Diagramatics.V2(length + length_2, 0))
        .fill('black').strokewidth(3); 

      const joint_circle = Diagramatics.circle(0.25)
        .position(Diagramatics.V2(length, 0.65))
        .fill('black');

      const arrow_head_size = 0.15;
      const positionOfForce = Diagramatics.V2(force_x, 3.8-(3-(forceMagnitude/100)));  
      const F_direction = Diagramatics.Vdir(-Math.PI / 2).scale(forceMagnitude/100); 
      const F = Diagramatics.annotation.vector(F_direction, `${forceMagnitude} N`, Diagramatics.V2(1, 2), arrow_head_size)
        .position(positionOfForce)
        .stroke('red').strokewidth(2).fill('red');

      const distanceAnnotation = Diagramatics.annotation.length(Diagramatics.V2(0, -0), Diagramatics.V2(length, -0), `${length} m`,  0.8, 0.5) 
        .stroke('blue');

      const distanceAnnotation_2 = Diagramatics.annotation.length(Diagramatics.V2(0, 0.5), Diagramatics.V2(force_x-0.1, 0.5), `${force_x} m`,  -0.8, 0.5) 
        .stroke('blue');

      const distanceAnnotation_3 = Diagramatics.annotation.length(Diagramatics.V2(length, 0), Diagramatics.V2(length+length_2, -0), `${length_2} m`,  0.8, 0.5) 
        .stroke('blue');

      draw(r1, r2, wall, F, triangle_base, joint_circle, distanceAnnotation, distanceAnnotation_2, distanceAnnotation_3);
    }

    updateDiagram();
  });
</script>
