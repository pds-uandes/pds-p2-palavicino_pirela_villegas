<h1>Pregunta Num√©rica</h1>
<p><%= @question_text %></p>

<% if @diagram == 'template1' %>
  <%= render 'templates/template1' %>
<% elsif @diagram == 'template2' %>
  <%= render 'templates/template2' %>
<% end %>

<p>Respuesta: <%=@numeric_question.correct_answer%></p>
<%= form_with url: submit_answer_numeric_question_path(@numeric_question), method: :post do %>
  <div>
    <%= label_tag :user_answer, "Ingresa tu respuesta:" %>
    <%= text_field_tag :user_answer %>
  </div>
  <%= submit_tag "Enviar Respuesta" %>
<% end %>

<% if flash[:reload] %>
  <script>
    window.onload = function() {
      window.location.reload();
    }
  </script>
<% end %>
